---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { markdownify } from "@/lib/utils/textConverter";

type Props = {
  service: CollectionEntry<"homepage">["data"]["service"];
};
const { service } = Astro.props;
const { our_service } = service;
---

<section class="section services" id="nosotros">
  <div class="container">
    {
      our_service.map((item, index) => (
        <div class="gx-5 row mt-12 items-center lg:mt-0">
          <div class={}>
            
          </div>
          <div
            class={}
          >
            <div class="">
              <h2 class="lg:text-4xl">{item.title}</h2>
              <div class="mt-4 flex flex-col gap-2" set:html={markdownify(item.description)} />
              {item.button && item.button.enable && (
                <a class="btn btn-white mt-6" href={item.button.link}>
                  {item.button.label}
                </a>
              )}
            </div>
          </div>
        </div>
      <div class="mx-auto mt-10">
        <h3 class="text-center text-xl my-2">Con la confianza de empresas l√≠deres</h3>
        <Image
          class="h-full object-contain mx-auto"
          alt="service"
          width={700}
          height={40}
          src={item.image}
        />
        <p class="mt-2 text-center text-sm mx-auto">{item.imageDes}</p>
      </div>
      ))
    }
  </div>
</section>
